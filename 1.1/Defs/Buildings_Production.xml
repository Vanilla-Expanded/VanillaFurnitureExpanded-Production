  <!-- Fueled Smelter -->
  <ThingDef ParentName="BenchBase">
    <defName>VFE_FueledSmelter</defName>
    <label>fueled smelter</label>
    <description>A wood-fueled station for smelting. Extracts usable metal from slag chunks and other mixed metal items.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
        <texPath>Things/Building/Workbenches/FueledSmelter</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(3.5,1.5)</drawSize>
        <damageData>
            <cornerTL>Damage/Corner</cornerTL>
            <cornerTR>Damage/Corner</cornerTR>
            <cornerBL>Damage/Corner</cornerBL>
            <cornerBR>Damage/Corner</cornerBR>
        </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <constructEffect>ConstructMetal</constructEffect>
    <costList>
        <Steel>170</Steel>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <useHitPoints>True</useHitPoints>
    <statBases>
        <WorkToBuild>2500</WorkToBuild>
        <MaxHitPoints>180</MaxHitPoints>
        <Flammability>1.0</Flammability>
    </statBases>
    <size>(3,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <recipes>
        <li>ExtractMetalFromSlag</li>
        <li>SmeltWeapon</li>
        <li>DestroyWeapon</li>
    </recipes>
    <inspectorTabs>
        <li>ITab_Bills</li>
    </inspectorTabs>
    <comps>
        <li Class="CompProperties_Refuelable">
            <fuelConsumptionRate>160.0</fuelConsumptionRate>
            <fuelCapacity>50.0</fuelCapacity>
            <fuelFilter>
            <thingDefs>
                <li>WoodLog</li>
            </thingDefs>
            </fuelFilter>
            <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        </li>
        <li Class="CompProperties_HeatPusher">
            <compClass>CompHeatPusherPowered</compClass>
            <heatPerSecond>9</heatPerSecond>
        </li>
    </comps>
    <building>
        <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
        <heatPerTickWhileWorking>0.10</heatPerTickWhileWorking>
    </building>
    <designationHotKey>Misc10</designationHotKey>
    <researchPrerequisites>
        <li>Smithing</li>
    </researchPrerequisites>
    <modExtensions>
        <li Class="VFEProduction.ThingDefExtension">
            <inheritRecipesFrom>
                <li>ElectricSmelter</li>
            </inheritRecipesFrom>
            <!-- <allowedProductFilter></allowedProductFilter>
            <disallowedProductFilter></disallowedProductFilter>
            <allowedRecipes></allowedRecipes>
            <disallowedRecipes></disallowedRecipes> -->
        </li>
    </modExtensions>
  </ThingDef>

